{
  "swagger": "2.0",
  "info": {
    "title": "API Ecosistema Financiero",
    "description": "Documentación de la API del Ecosistema Financiero",
    "version": "1.0.0"
  },
  "paths": {
    "/recommendation": {
      "post": {
        "summary": "Recomendar productos financieros segun las condiciones de edad e ingresos de cada cliente ",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Información del cliente para recibir recomendaciones",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "ingresos": {
                  "type": "number",
                  "format": "double"
                },
                "ciudadUbicacion": {
                  "type": "string"
                },
                "edad": {
                  "type": "integer"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Recomendaciones de productos financieros enviadas exitosamente",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "customerName": {
                    "type": "string"
                  },
                  "customerId": {
                    "type": "string"
                  },
                  "recommendations": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "codigo": {
                          "type": "string"
                        },
                        "descripcion": {
                          "type": "string"
                        },
                        "condiciones": {
                          "type": "object",
                          "properties": {
                            "pais": {
                              "type": "string"
                            },
                            "edadMinima": {
                              "type": "integer"
                            },
                            "ingresosMinimos": {
                              "type": "number"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "La solicitud no es válida",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "title": {
                  "type": "string",
                  "example": "Bad Request"
                },
                "errors": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string",
                        "example": "SA404"
                      },
                      "detail": {
                        "type": "string",
                        "example": "Sintaxis de solicitud mal formada, mensaje de solicitud no válido"
                      }
                    }
                  }
                }
              }
            }
          },
          "500" :{
            "description": "Error interno del servidor",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 500
                },
                "title": {
                  "type": "string",
                  "example": "Internal Server Error"
                },
                "errors": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string",
                        "example": "SA500"
                      },
                      "detail": {
                        "type": "string",
                        "example": "Error interno de servidor 500"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/recommendationProducts": {
      "post": {
        "summary": "Recomendar productos financieros",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Lista de clientes segun cada producto teniendo en cuenta las condiciones de este ",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "codigo": {
                  "type": "string",
                },
                "descripcion": {
                  "type": "string"
                },
                "condiciones": {
                  "type": "object",
                  "properties": {
                    "edadMinima": {
                      "type": "integer"
                    },
                    "ingresosMinimos": {
                      "type": "number",
                      "format": "double"
                    }
                  }
                }
                
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Recomendaciones de productos financieros enviadas exitosamente",
            "schema": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "nombre": {
                    "type": "string"
                  },
                  "clientes": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            } 
          },
          "400": {
            "description": "La solicitud no es válida",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "title": {
                  "type": "string",
                  "example": "Bad Request"
                },
                "errors": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string",
                        "example": "SA404"
                      },
                      "detail": {
                        "type": "string",
                        "example": "Sintaxis de solicitud mal formada, mensaje de solicitud no válido"
                      }
                    }
                  }
                }
              }
            }
          },
          "500" :{
            "description": "Error interno del servidor",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 500
                },
                "title": {
                  "type": "string",
                  "example": "Internal Server Error"
                },
                "errors": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string",
                        "example": "SA500"
                      },
                      "detail": {
                        "type": "string",
                        "example": "Error interno de servidor 500"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
