{
  "swagger": "2.0",
  "info": {
    "title": "API Ecosistema Financiero",
    "description": "Documentación de la API del Ecosistema Financiero",
    "version": "1.0.0"
  },
  "paths": {
    "/recomendarProductos": {
      "post": {
        "summary": "Recomendar productos financieros",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Información del cliente para recibir recomendaciones",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "ingresos": {
                  "type": "number",
                  "format": "double"
                },
                "ciudadUbicacion": {
                  "type": "string"
                },
                "edad": {
                  "type": "integer"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Recomendaciones de productos financieros enviadas exitosamente",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "descripcion": {
                    "type": "string"
                  },
                  "tipo": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "400": {
            "description": "La solicitud no es válida",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "descripcion": {
                    "type": "string"
                  },
                  "tipo": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "401": {
            "description": "No autorizado: el cliente no tiene permiso para acceder",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "descripcion": {
                    "type": "string"
                  },
                  "tipo": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Recurso no encontrado: la ruta solicitada no existe",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "descripcion": {
                    "type": "string"
                  },
                  "tipo": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "descripcion": {
                    "type": "string"
                  },
                  "tipo": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "502": {
            "description": "Error en la pasarela",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "descripcion": {
                    "type": "string"
                  },
                  "tipo": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "504": {
            "description": "Tiempo de espera de la pasarela agotado",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "descripcion": {
                    "type": "string"
                  },
                  "tipo": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
